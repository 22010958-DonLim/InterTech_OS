@model IEnumerable<StrawberryHub.Models.StrawberryLike>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrawberryArticle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrawberryUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrawberryArticle.ArticleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrawberryUser.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LikeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LikeId">Details</a> |
