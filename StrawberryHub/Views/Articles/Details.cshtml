@model StrawberryHub.Models.StrawberryArticle

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            <h4><strong>@Html.DisplayFor(model => model.Title)</strong></h4>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Photos/@Model.Picture" alt="Article Image" style="max-width:100%; height:auto;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GoalType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GoalType.Type)
        </dd>
        <dt class="col-sm-2">
            Written By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StrawberryUser.Username)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArticleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
