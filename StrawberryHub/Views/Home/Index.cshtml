						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- portfolio_section - end
		================================================== -->
	</main>
	
</body>

<div class="modal" id="newAttachmentModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" style="color:black">Daily Task</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" />
			</div>
			<div class="modal-body">
				<div class="row mb-2">
					<form enctype="multipart/form-data" id="fmAttachment">
						@if (ViewBag.TasksToShow != null)
						{
							@foreach (var task in ViewBag.TasksToShow)
							{
								<li style="margin-bottom: 10px;">
									<label style="color: black" for="task-@task.TaskId" value="@task.PointsReward">@task.TaskDescription</label>
									<input type="checkbox" id="task-@task.TaskId" style="vertical-align: middle; margin-right: 10px;" />
								</li>
							}
						}
						else
						{
							<p>Congratulations! You have finished all you tasks! See you tmr!</p>
						}
					</form>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary borderR" data-bs-dismiss="modal" style="background-color:#fc5a8d; color:white">Close</button>
			</div>
		</div>
	</div>
</div>
