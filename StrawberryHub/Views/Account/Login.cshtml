@model LoginUser
@{
    Layout = "_Layout";
}

<form asp-controller="Account" asp-action="Login" method="post">
    <h3 class="display-4">Welcome to OSHub</h3>

    <div class="col-sm-5">

        @if (ViewData["Message"] != null)
        {
            <div class="mb-3">
                <div class="alert alert-secondary">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        }

        <div class="mb-3">
            <label asp-for="Username" class="form-label fw-bold">Username :</label>
            <input asp-for="Username" class="form-control form-control-sm" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold">Password :</label>
            <input asp-for="Password" class="form-control form-control-sm" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

@*        <div class="form-group row">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">
                    Remember Me
                </label>
            </div>
        </div>*@

        <div class="mb-3">
            <input type="submit" class="btn btn-sm btn-primary" value="Sign In" />
        </div>

        <div>
        <p>Don't have an Account? <a asp-action="Register" asp-controller="Users">Register</a></p>
        </div>

    </div>
</form>